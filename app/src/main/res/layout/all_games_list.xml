<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#99FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/all_games_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Series"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/all_games_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Venue"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/all_games_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Status"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Home"
                    android:textColor="@color/colorBlack"
                    android:layout_weight=".5"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp">
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/all_games_home_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="60dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:layout_weight=".5"/>
                    <TextView
                        android:id="@+id/all_games_home_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="60dp"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:layout_weight=".5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Away"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_weight=".5"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp">

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/all_games_away_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="60dp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:layout_weight=".5"/>
                    <TextView
                        android:id="@+id/all_games_away_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="60dp"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:layout_weight=".5"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/all_games_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            android:paddingRight="10dp"
            android:textColor="@color/colorBlack"
            android:text="Date"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>